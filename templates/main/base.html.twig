<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Главная страница{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/framework/bootstrap-4/css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('assets/main/css/style.css') }}">
        {% endblock %}
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('home') }}">
            <i class="fa fa-microchip" aria-hidden="true"></i>
        </a>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Главная <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <form class="form-inline">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="{{ path('admin') }}" class="btn btn-outline-success my-2 my-sm-0" type="submit">выход из Админки</a>
                {% else %}
                <a href="{{ path('admin') }}" class="btn btn-outline-success my-2 my-sm-0" type="submit">Вход</a>
                {% endif %}
            </form>
        </div>
    </nav>
        {% block body %}

        {% endblock %}
        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" crossorigin="anonymous" integrity="sha512-5WvZa4N7Jq3TVNCp4rjcBMlc6pT3lZ7gVxjtI6IkKW+uItSa+rFgtFljvZnCxQGj8SUX5DHraKE6Mn/4smK1Cg=="></script>
            <script src="{{ asset('assets/framework/vue/vue.js') }}"></script>
            <script src="{{ asset('assets/framework/bootstrap-4/js/bootstrap.js') }}"></script>
            {% block addJs %}{% endblock %}
        {% endblock %}
    </body>
</html>
